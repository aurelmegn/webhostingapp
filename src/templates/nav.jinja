<div class="flex justify-center w-full bg-secondary-700 sticky top-0">
<nav class="flex items-center justify-between flex-wrap bg-secondary-700 p-2 sticky w-full md:w-3/4 top-0 shadow-md ">
  <div class="flex items-center flex-shrink-0 text-white mr-6">
    <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
    <a href="{{ url_for('admin.index') }}" class="font-semibold text-xl tracking-tight">Host Control Panel</a>
  </div>
  <div class="block lg:hidden">
    <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto ">
    <div class="text-sm lg:flex-grow">
        {% if current_user.is_authenticated %}
          <a href="{{ url_for('dashboard.index') }}" class="nav-item  {{ 'active' if request.endpoint == 'dashboard.dashboard'}} mr-4">Dashboard </a>
        {% endif %}

        <a href="{{ url_for('docs.index') }}" class="nav-item {{ 'active' if request.endpoint == 'docs.index'}} mr-4">Documentation </a>
        <a href="{{ url_for('blog.index') }}" class="nav-item {{ 'active' if request.endpoint == 'blog.index'}}">Blog </a>

    </div>
    <div>
       {% if current_user.is_authenticated %}
            <a href="{{ url_for('logout') }}" class="nav-item ml-auto text-xs hover:underline ">Logout </a>
            <a href="{{ url_for('settings.index') }}" class="nav-item text-xs {{ 'active' if request.endpoint == 'settings.index'}}">Account</a>

            {% if current_user.has_role('admin')  %}
                <a href="{{ url_for('admin.index') }}" class="nav-item ml-auto text-xs hover:underline">Admin </a>
            {% endif %}
       {% else %}
           <a href="{{ url_for('security.login') }}" class="nav-item ml-auto text-xs hover:underline">Login </a>
       {% endif %}
    </div>
  </div>
</nav>
</div>
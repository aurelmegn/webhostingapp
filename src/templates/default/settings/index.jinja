{% extends "default/settings/base.jinja" %}

{% block name %} Account {% endblock %}
{% block settings_content %}

    <div class="flex flex-col w-full">
        <h2 class="text-xl">Edit account information</h2>
        <hr class=" border-secondary-300">
    </div>

    <form id="change_info_form"  class="w-full flex flex-col p-3" method="post" action="{{ url_for("settings.index") }}">
        {{ change_info_form.hidden_tag() }}


            <div class="my-1">
                {{ change_info_form.name.label(class="text-lg") }}
                {{ change_info_form.name(class="setting-input not-italic text-lg form-input") }}
                {% for error in change_info_form.name.errors %}
                    <p class="form-error "> {{ error }}</p>
                {% endfor %}
            </div>

            <div class="my-1">
                {{ change_info_form.country.label(class="text-lg") }}
                {{ change_info_form.country(class="setting-input text-lg form-input") }}
                {% for error in change_info_form.country.errors %}
                    <p class="form-error "> {{ error }}</p>
                {% endfor %}
            </div>

            <div class="my-1">
                {{ change_info_form.city.label(class="text-lg")}}
                {{ change_info_form.city(class="setting-input text-lg form-input") }}
                {% for error in change_info_form.city.errors %}
                    <p class="form-error "> {{ error }}</p>
                {% endfor %}
            </div>

            <div class="my-1">
                {{ change_info_form.address.label(class="text-lg")}}
                {{ change_info_form.address(class="setting-input text-lg form-input") }}
                {% for error in change_info_form.address.errors %}
                    <p class="form-error "> {{ error }}</p>
                {% endfor %}
            </div>

            <div class="my-1">
                {{ change_info_form.number.label(class="text-lg")}}
                {{ change_info_form.number(class="setting-input text-lg form-input") }}
                {% for error in change_info_form.number.errors %}
                    <p class="form-error "> {{ error }}</p>
                {% endfor %}
            </div>

            <div class="flex flex-col md:flex-row items-center content-between justify-center w-full md:w-1/5 ml-auto mt-2">
                <button id="change_info_formSubmitBtn" class="btn-teal btn w-full" country="submit">
                Save
              </button>
            </div>
    </form>

    <div class="flex flex-col my-4">
        <h2 class="text-xl ">Export account data</h2>
        <hr class="w-full border-secondary-300">
        <a href="{{ url_for("settings.index", export_data=1) }}" class="mt-3 w-full md:w-1/2 px-3 text-xl text-grey-600 text-white rounded border border-grey-600">
{#            <button class="">#}
                Export your account data
{#            </button>#}
        </a>
    </div>


    <div class="flex flex-col my-4">
        <h2 class="text-xl">Delete Account</h2>
        <hr class="w-full border-secondary-300">
        <a href="{{ url_for("settings.index", delete_account=1) }}" class="mt-3 w-full md:w-2/5 px-3 text-xl text-red-600 text-white rounded border border-red-600">
{#            <button class="">#}
                Delete your account
{#            </button>#}
        </a>
    </div>


{% endblock %}

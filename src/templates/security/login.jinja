{% extends "base.jinja" %}

{% block title %}{% endblock %}
{% from "security/_macros.html" import render_field_with_errors, render_field %}
{% block body %}

<div class="bg-white flex flex-col w-full justify-center content-center items-center h-screen">
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-full md:w-1/3" action="{{ url_for("security.login") }}" method="post" >
        {{ login_user_form.hidden_tag() }}

        <div class="mb-4">
          <label class="block text-md mb-2" for="username">
            Username or Email
          </label>
          {{ login_user_form.email(type="email", class="shadow appearance-none border border-secondary rounded w-full py-2 px-3 text-grey", placeholder="Username or Email") }}
            {% for error in login_user_form.email.errors %}
                <p class="text-red text-xs italic "> {{ error }}</p>
            {% endfor %}
        </div>

        <div class="mb-6">
          <label class="block text-md  mb-2" for="password">
            Password
          </label>
            {{ login_user_form.password(class="", type="password", class="shadow appearance-none border border-secondary rounded w-full py-2 px-3 text-grey mb-3", placeholder="******") }}

            {% for error in login_user_form.password.errors %}
                <p class="text-red text-xs italic "> {{ error }}</p>
           {% endfor %}
        </div>

        {#<div class="checkbox">
          <label> <input type="checkbox"> Save password </label>
        </div>#}
        <div class="flex items-center justify-between">
          <button class="bg-teal-600 hover:bg-teal-900 text-white font-bold py-2 px-4 rounded" type="submit">
            Sign In
          </button>
          <a class="inline-block align-baseline font-bold text-sm text-blue hover:underline" href="#">
            Forgot Password?
          </a>
        </div>
    </form>
</div>

{% endblock %}
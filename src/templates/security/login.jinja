{% extends "base.jinja" %}

{% block title %} Login page {% endblock %}
{% from "security/_macros.html" import render_field_with_errors, render_field %}
{% block body %}

<div class="bg-gray-300 flex flex-col w-full justify-center content-center items-center h-screen">
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-full md:w-1/3 " action="{{ url_for("security.login") }}" method="post" >
        {{ login_user_form.hidden_tag() }}

        <div class="mb-4">
          <label class="block text-md mb-2" for="username">
            Username or Email
          </label>
          {{ login_user_form.email(type="email", class="form-input placeholder-secondary ", placeholder="Username or Email") }}
            {% for error in login_user_form.email.errors %}
                <p class="form-error "> {{ error }}</p>
            {% endfor %}
        </div>

        <div class="mb-6">
          <label class="block text-md  mb-2" for="password">
            Password
          </label>
            {{ login_user_form.password(class="", type="password", class="form-input", placeholder="******") }}

            {% for error in login_user_form.password.errors %}
                <p class="form-error "> {{ error }}</p>
           {% endfor %}
        </div>

        {#<div class="checkbox">
          <label> <input type="checkbox"> Save password </label>
        </div>#}
        <div class="flex items-center justify-between">
          <a class="btn-gray btn">
            Forgot Password?
          </a>

          <button class="btn-teal btn" type="submit">
            Sign In
          </button>

        </div>
    </form>
</div>

{% endblock %}